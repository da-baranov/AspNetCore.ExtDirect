@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<script src="~/ExtDirect.js"></script>

<script>
    Ext.onReady(function () {
        Ext.Loader.setPath("ExtDirectDemo", "app");

        Ext.require(["ExtDirectDemo.view.Index"]);

        Ext.application({
            name: "ExtDirectDemo",
            quickTips: true,
            // mainView: "ExtDirectDemo.view.Index",
            launch: function () {
                // Add polling providers
                Ext.direct.Manager.addProvider(Ext.POLLING_DATA_API);
                Ext.direct.Manager.addProvider(Ext.POLLING_CHAT_API);
                Ext.direct.Manager.addProvider(Ext.POLLING_TEST_API);

                // Add remoting providers
                Ext.direct.Manager.addProvider(Ext.REMOTING_API);
                Ext.direct.Manager.addProvider(Ext.CALCULATOR_API_1);
                Ext.direct.Manager.addProvider(Ext.CALCULATOR_API_2);

                var mainView = Ext.create("ExtDirectDemo.view.Index");
                mainView.renderTo(Ext.getBody());
            }
        });
    });
</script>
