@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<script src="~/ExtDirect.js"></script>

<script>
    Ext.onReady(function () {
        Ext.Loader.setPath("ExtDirectDemo", "app");

        Ext.require(["ExtDirectDemo.view.Index"]);

        Ext.application({
            name: "ExtDirectDemo",
            quickTips: true,

            launch: function () {
                // Add and immediately disable a polling provider
                Ext.direct.Manager.addProvider({
                    id: 'DemoPolling',
                    type: 'polling',
                    url: Ext.POLLING_DATA_API.url,
                    interval: 1000,
                });
                Ext.direct.Manager.getProvider('DemoPolling').disconnect();

                // Add another polling provider
                Ext.direct.Manager.addProvider({
                    id: 'ChatPolling',
                    type: 'polling',
                    url: Ext.POLLING_CHAT_API.url,
                    interval: 1000,
                });

                // Add remoting provider
                Ext.direct.Manager.addProvider(Ext.REMOTING_API);

                // Create main view
                Ext.create("ExtDirectDemo.view.Index", {
                    renderTo: Ext.getBody()
                });
            }
        });
    });
</script>
